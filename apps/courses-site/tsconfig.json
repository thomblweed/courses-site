{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ui-kit/ui": ["../../libs/ui-kit/ui/src/index.ts"],
      "@ui-kit/ui/*": ["../../libs/ui-kit/ui/src/*"],
      "@ui-kit/util": ["../../libs/ui-kit/util/src/index.ts"],
      "@ui-kit/util/*": ["../../libs/ui-kit/util/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/courses-site/.next/types/**/*.ts",
    "../../dist/apps/courses-site/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
